<UserControl x:Class="Drukmeter.UitvoerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drukmeter"
             mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="canvas" Width="200" Height="200" Background="White">
        <Path Stroke="Black" StrokeThickness="3">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="160,160" IsClosed="False">
                            <ArcSegment Point="40,160" Size="80,80" IsLargeArc="True"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Ellipse Width="10" Height="10" Canvas.Left="95" Canvas.Top="95" Fill="Red"/>
        <Line x:Name="wijzer" Stroke="Red" X1="100" Y1="100" X2="40" Y2="160"/>
        <Label x:Name="Type" Canvas.Left="40" Canvas.Top="0" Width="120" HorizontalContentAlignment="Center" Content="Pa"/>
        <Label x:Name="Value" Canvas.Left="40" Canvas.Top="170" Width="120" HorizontalContentAlignment="Center" Content="100"/>

    </Canvas>
</UserControl>
